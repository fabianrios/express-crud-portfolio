<body>
  
  {{#query}} {{!-- login  public --}}
  
     <div class="main-body" style="background:white;padding-top: 50px;">  
         {{#if error}}
           <div class="row">
             <div class="large-8 columns large-centered">
               <div data-alert class="alert-box alert round">
                 {{{error}}}
                 <a href="#" class="close">&times;</a>
               </div>
             </div>
           </div>
         {{/if}}
         {{#if success}}
           <div class="row">
             <div class="large-8 columns large-centered">
               <div data-alert class="alert-box success round">
                 {{{success}}}
                 <a href="#" class="close">&times;</a>
               </div>
             </div>
           </div>
         {{/if}}
         {{#if user}}
            <h6 class="subheader whitetxt">Bienvenido <a href="/profile" class="profile">{{user.username}}</a> <a href="/logout"><span class="fa fa-sign-out"></span></a></h6>
         {{/if}}
         {{{body}}}
       </div>
  
  {{else}}
  
     {{#if user}}
         
         <div class="sidebar-menu">
           <a  href="/" class="logo"><img src="/img/logo_white.png" alt="" /></a>
           <div class="inner-padding">
             <h6 class="subheader text-right">Bienvenido <a href="/admin/users" class="profile"> <span class="fa fa-cog"></span> {{user.username}}</a> <a class="profile" href="/logout"><span class="fa fa-sign-out"></span></a></h6>
           </div>
           <ul class="admin">
             <li><a href="/"><span class="fa fa-home fa-2x"></span> HOME</a></li>
             <li><a href="/countries_search" class="{{countries_search}}"><span class="fa fa-map-marker fa-2x"></span> PAISES</a></li>
             <li><a href="/admin/articles" class="{{admin_articles}}"><span class="fa fa-file-text fa-2x"></span> BLOG</a></li>
             <li><a href="/admin/clients" class="{{admin_clients}}"><span class="fa fa-user fa-2x"></span> INTERESADOS {{#if qty}}<span class="number">{{qty}}</span>{{/if}}</a></li>
             <li><a href="/admin/contact" class="{{admin_contacts}}"><span class="fa fa-phone fa-2x"></span> CONTACTO {{#if qty_contacts}}<span class="number">{{qty_contacts}}</span>{{/if}}</a></li>
           </ul>
         </div>
         <div class="admin-body">
           {{{body}}}
         </div>
         
     {{else}}
         {{#if bg}}
           {{#if home}}
             <div class="main-body home" data-home="{{home}}" style="background-image:url({{bg}});background-size:cover;background-color:rgb(42,64,104);">
           {{else}}
             <div class="main-body" data-home="{{home}}" style="background-image:url({{bg}});background-size:cover;background-color:rgb(42,64,104);">  
           {{/if}}
         {{else}}
           <div class="main-body">  
         {{/if}}
           {{#if background}}
              {{#if article.cover}}
                <div class="nav {{pageTitle}}" style="background-image:url(http://res.cloudinary.com/{{cloudinary_account}}/image/upload/c_fill,h_720,w_1920/{{article.cover}});">
                <div class="gradient-article">
              {{else}}
                <div class="nav {{pageTitle}}">
              {{/if}}
              {{#if home}}
               <div class="bg-grad">
              {{/if}}
           {{else}}
            <div class="nav">
           {{/if}}
             <a  href="/" class="logo"><img src="/img/{{logo}}" alt="" /></a>
             <ul class="navigation">
               <li><a href="/blog">BLOG</a></li>
               <li><a href="/experiences">EXPERIENCIAS</a></li>
               <li><a href="/contact">CONTACTO</a></li>
             </ul>
             <ul class="social">
               <li><a href="http://twitter.com/@aramsvip" target="_blank"><span class="fa fa-twitter fa-large"></span></a></li>
               <li><a href="http://facebook.com/aramsvip" target="_blank"><span class="fa fa-facebook fa-large"></span></a></li>
               <li><a href="https://www.instagram.com/aramsvip/" target="_blank"><span class="fa fa-instagram fa-large"></span></a></li>
             </ul>
             <a href="#" class="xclose"><span class="fa fa-bars fa-lg"></span></a>
             {{#ifCond pageTitle "articles"}}
             <div class="br_after"></div>
             <div class="text-center">
               <div class="block">
                 <h2 class="upper">{{article.title}}</h2>
                 <ul class="centerize article-show">
                   {{#each article.category}}
                     <li><a href="/blog/?filter={{this}}">{{this}}</a></li>
                   {{else}}
                     <li><a href="/blog/?filter={{article.category}}">{{article.category}}</a></li>
                   {{/each}}
                 </ul>
               </div>
               <div class="pic_profile">
                 <img src="http://res.cloudinary.com/{{cloudinary_account}}/image/upload/c_crop,h_80,r_0,w_80/v{{author.version}}/{{author.image}}.jpg" alt="" />
                 <h6 class="whitetxt">Escrito por {{author.name}}</h6>
               </div>
               <a id="like" data-id="{{article.id}}" class="whitetxt"><span class="fa fa-heart fa-2x"></span></a>
             </div>
             {{/ifCond}}
             {{#if home}} {{!-- // esta en el home y tiene que cerrar el gradient de forma fea --}}
              </div>
             {{/if}}
             {{#if article.cover}} {{!-- // esta en articulos y tiene que cerrar el gradient de forma fea --}}
              </div>
             {{/if}}
           </div>
             <div class="inside-body">
               {{#if home}}
                 <div class="bg-gradient">
               {{/if}}
             {{#if error}}
               {{#if yes404}}
               {{else}}
               <div class="row">
                 <div class="large-8 columns large-centered">
                   <div data-alert class="alert-box alert round">
                     {{{error}}}
                     <a href="#" class="close">&times;</a>
                   </div>
                 </div>
               </div>
               {{/if}}
             {{/if}}
             {{#if success}}
               <div class="row">
                 <div class="large-8 columns large-centered">
                   <div data-alert class="alert-box success round">
                     {{{success}}}
                     <a href="#" class="close">&times;</a>
                   </div>
                 </div>
               </div>
             {{/if}}
             {{{body}}}
             {{#if home}}
               </div>
             {{/if}}
           </div>
     
     {{/if}}
 

   
  {{/query}} {{!-- /login public --}}
  
  {{#if inlineform}}
