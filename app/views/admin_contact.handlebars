<div class="row">
  <div class="large-12">
    <a href="/export" class="small right button export"><span class="fa fa-download"></span> Exportar </a>
    <br /> <br />     <br />
    <table width="100%" id="data">
     <thead>
       <tr>
         <th>Nombre</th>
         <th>Mail</th>
         <th>Fecha</th>
         <th>Asunto</th>
         <th>Mensaje</th>
         <th>Borrar</th>
       </tr>
     </thead>
     <tbody>
    {{#each clients}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.mail}}</td>
        <td>{{shortDate this.createdAt}}</td>
        <td>{{this.subject}}</td>
        <td>{{this.message}}</td>
        <td><a href="/delete_contact/{{this.id}}/destroy" onclick="return confirm('Seguro quieres borrarlo?');" class="tiny borrar button"><span class="fa-trash fa"></span></a></td>
      </tr>
    {{/each}}
     </tbody>
    </table>
    </div>
</div>